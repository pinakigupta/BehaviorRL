    "version": "2.0.0",
    "configurations": [    
        "tasks": [{
            "label": "xhostset",
            "command": "xhost", // Could be any other shell command
            "args": ["+"],
            "type": "shell"
        }]            
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [ "predict=True"],
            "preLaunchTask": "xhostset"
        }
    ]
}